<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".RegistrationActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/Logo"
        android:layout_marginTop="30px"
        android:id="@+id/logo"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добро пожаловать!"
        android:textColor="#000000"
        android:textSize="20sp"
        android:fontFamily="@font/romul"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:id="@+id/sign_up"
        android:layout_below="@id/logo"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:background="@drawable/field"
        android:layout_below="@id/sign_up"
        android:hint="E-mail"
        android:fontFamily="@font/romul"
        android:textColor="#000000"
        android:textColorHint="#E5E5E5"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:inputType="textEmailAddress"
        />

    <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/username"
    android:background="@drawable/field"
    android:layout_below="@id/email"
    android:inputType="text"
    android:fontFamily="@font/romul"
    android:hint="Логин"
    android:textColor="#000000"
    android:textColorHint="#E5E5E5"
    android:layout_margin="10dp"
    android:padding="20dp"
    />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:background="@drawable/field"
        android:layout_below="@id/username"
        android:hint="Пароль"
        android:fontFamily="@font/romul"
        android:textColor="#000000"
        android:textColorHint="#E5E5E5"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:inputType="textPassword"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/confirm_password"
        android:background="@drawable/field"
        android:layout_below="@id/password"
        android:fontFamily="@font/romul"
        android:hint="Повторите пароль"
        android:textColor="#000000"
        android:textColorHint="#E5E5E5"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:inputType="textPassword"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_sign_up"
        android:layout_below="@id/confirm_password"
        android:text="@string/sign_up"
        android:backgroundTint="@color/design_default_color_secondary"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_back_to_sign_in"
        android:layout_below="@id/button_sign_up"
        android:text="@string/sign_in"
        android:backgroundTint="@color/design_default_color_secondary"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/or_sign_in_with"
        android:id="@+id/or_sign_in_with"
        android:textColor="@color/teal_200"
        android:layout_above="@+id/social"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/social"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <ImageView
            android:layout_height="48dp"
            android:layout_width="48dp"
            android:layout_margin="20dp"
            android:id="@+id/google_btn"
            android:src="@drawable/google"
            />

        <ImageView
            android:layout_height="48dp"
            android:layout_width="48dp"
            android:layout_margin="20dp"
            android:id="@+id/vk_btn"
            android:src="@drawable/vk"
            />

    </LinearLayout>

</RelativeLayout>